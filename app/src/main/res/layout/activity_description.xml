<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ViewFlipper
                    android:id="@+id/v_flipper"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:foregroundGravity="center"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="10dp">
                </ViewFlipper>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="рокля ZIGA"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/price"
                android:text="44.00 лв."
                android:layout_gravity="right"
                android:layout_marginLeft="170dp"
                android:gravity="right"
                android:textStyle="bold"
                android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/color"
                android:text="Цвят:"
                android:layout_gravity="left"
                android:textSize="15sp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spinnerColor"
                android:background="@color/white"
                android:spinnerMode="dropdown"
                android:verticalScrollbarPosition="defaultPosition">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/size"
                android:text="Размер:"
                android:layout_gravity="left"
                android:textSize="15sp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spinnerSize"
                android:background="@color/white"
                android:spinnerMode="dropdown"
                android:verticalScrollbarPosition="defaultPosition">
            </Spinner>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quantity"
                android:text="Брой:"
                android:layout_gravity="left"
                android:textSize="15sp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spinnerQuantity"
                android:background="@color/white"
                android:spinnerMode="dropdown"
                android:verticalScrollbarPosition="defaultPosition">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:text="Описание:"
                android:layout_gravity="left"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textdescription"
                android:layout_marginLeft="20dp"
                android:text="* Инструкции за поддръжка: машинно пране при 30°C \n * Състав: вискоза 50%, полиамид 40%, еластан 10% \n -> модерна дълга рокля с тренди дизайн \n -> моделът е с деколте, тип халтер \n -> свободна кройка, подходяща за всяка фигура \n -> атрактивна цветна щампа \n -> приятна и лека материя, подходяща за топлите дни \n -> свежо предложение за модерна ежедневна визия"
                android:layout_gravity="left"/>
        </LinearLayout>
            <Button
                android:id="@+id/btnbuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUY"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@color/background"/>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:menu="@menu/drawermenu"
        app:headerLayout="@layout/header"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>